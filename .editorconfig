root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Kotlin / Java / Gradle scripts
[*.{kt,kts,java,gradle,gradle.kts}]
indent_style = space
indent_size = 2
ij_kotlin_imports_layout = *

# YAML / YML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# SQL migrations
[*.sql]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 2

# Properties files
[*.{properties,conf}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Git configuration files
[*.{gitattributes,gitconfig,gitignore}]
end_of_line = lf

# License / text docs
[*.{txt,license,LICENSE}]
indent_style = space
indent_size = 2
